@model Assignment_2.ContactModel;

<div class="container-fluid">
    <h1>Contact Me</h1>
    <form action="/ContactResult" method="post">     
        <div class="row">
            <div class="mt-3 form-group col-12 col-sm-6">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" name="FirstName" id="FirstName">
            </div>
            <div class="mt-3 form-group col-12 col-sm-6">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" name="LastName" id="LastName">
            </div>
            <div class="mt-3 form-group col-12">
                <label for="Address">Address</label>
                <input type="text" class="form-control" name="Address" id="Address">
            </div>
            <div class="mt-3 form-group col-12 col-sm-4">
                <label for="City">City</label>
                <input type="text" class="form-control" name="City" id="City">
            </div>
            <div class="mt-3 form-group col-12 col-sm-4">
                <label for="State">State</label>
                <input type="text" class="form-control" name="State" id="State">
            </div>
            <div class="mt-3 form-group col-12 col-sm-4">
                <label for="Zip">Zip Code</label>
                <input type="text" class="form-control" name="Zip" id="Zip">
            </div>
        </div>
        <input class="mt-3 btn btn-primary" class="form-control" type="submit" value="Submit">
    </form>
</div>