@model Validation.RegistrationFormModel

<h1>Registration</h1>
<div>

</div>
<form asp-action="Index" asp-controller="RegistrationForm" method="post">
    <div class="row">
        <div class="form-group col-12 col-sm-6">
            <label asp-for="FirstName"></label>
            <input type="text" class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group col-12 col-sm-6">
            <label asp-for="LastName"></label>
            <input type="text" class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input type="text" class="form-control" asp-for="EmailAddress" />
        <span asp-validation-for="EmailAddress"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="text" class="form-control" asp-for="Address" />
        
    </div>
    <div class="row">
        <div class="form-group col-12 col-sm-4">
            <label asp-for="City"></label>
            <input type="text" class="form-control" asp-for="City" />
            
        </div>
        <div class="form-group col-12 col-sm-4">
            <label asp-for="State"></label>
            <select  asp-for="State" class="form-select" asp-items="@Model.StateList">
            </select>
            
        </div>
        <div class="form-group col-12 col-sm-4">
            <label asp-for="ZipCode"></label>
            <input type="text" class="form-control" asp-for="ZipCode" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>